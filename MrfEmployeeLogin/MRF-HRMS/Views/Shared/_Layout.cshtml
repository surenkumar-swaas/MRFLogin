<!DOCTYPE html>
<html>
<head>
    <title>MRF-HRMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            margin: 0px;
            padding: 0px;
        }

        .head-mrf {
            margin-top: 0px;
            width: 100%;
            height: 60px;
            background-color: #147ea8;
        }

        .head-txt {
            color: white;
            float: left;
            padding-left: 20px;
        }

        .bi-house-icon {
            float: right;
        }

        .bi .bi-house {
            float: right;
            padding-right: 30px;
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <div class="head-mrf">

        <a href="#"><h3 class="head-txt">MRF Definer</h3></a>
        <div class="bi-house-icon">

            <a href="#"><i class="bi bi-house"></i></a>
        </div>
    </div>
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>
